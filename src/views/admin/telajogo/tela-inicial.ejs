                    <img src="/admin/assets/telainicial3.png" width="1366" height="657" alt="Testando" class="img-fundo-imagem">

                    </form>
                </div>
                
                
                <div class="vai-jogar">
                    <img src="/admin/assets/botaojogar_ti.png">
                    <div class="vai-jogar2">
                        <a  href="/admin/telajogo/cadastrar-jogador">
                        <img type="submit" src="/admin/assets/botaojogar_ti2.png" href="/admin/telajogo/cadastrar-jogador">
                         </a>
                    </div>
                  </div>
                  

                  

                  <div class="telacomojogar">
                    <img src="/admin/assets/botaohelp.png">
                    <div class="telacomojogar2">
                        <a  href="/admin/telajogo/como-jogar">
                        <img type="submit" src="/admin/assets/botaohelp2.png">
                         </a>
                    </div>
                  </div>
                  
                  <audio id="audio" preload="none" src="Audio-1.mp3" allow="autoplay"></audio>
                
                  <script type="text/javascript">
                    var contador = 1;
                    function som(){
                    const music = new Audio('../Audio-1.mp3');
                    
                    music.loop =true;
                    music.playbackRate = 1; 
                    
                        contador++;
                        if(contador % 2 == 0) {
                            document.getElementById("som123").src="/admin/assets/som2.png";
                            music.pause();
                    }
                        else{
                            document.getElementById("som123").src="/admin/assets/som.png";
                            music.play();
                        }
                    }
                    

                  </script>
                  
                <form class="form-horizontal" method="POST"> 
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div>
                    <div>
                        <table class="table table-hover">
                            <tbody>
                                <%
                                function numberToReal(numero) {
                                    var numero = numero.toFixed(2).split('.');
                                    numero[0] = "R$ " + numero[0].split(/(?=(?:...)*$)/).join('.');
                                    return numero.join(',');
                                }
                                %>
                                
                            </tbody>
                        </table>
                        

                        <form class="form-horizontal" method="POST">
                            <% if(typeof msg !== "undefined"){ %>
                            <div class="alert bg-green alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                                <%=msg%>
                            </div>
                            <% } %>
                            
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
        <!-- #END# Horizontal Layout -->
    </div>
    
</section>
