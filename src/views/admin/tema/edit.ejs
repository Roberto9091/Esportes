<%- include('../cabecalho') -%>
<section class="content">
    <div class="container-fluid">
        <!-- Horizontal Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h4>
                            EDITAR TEMA
                        </h4>
                    </div>
                    <div class="body">
                        <form class="form-horizontal" method="POST">
                            <% if(typeof msg !== "undefined"){ %>
                            <div class="alert bg-green alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                                <%=msg%>
                            </div>
                            <% } %>
                            <input type="hidden" name="tema" value="<%=Temas.id%>">
                            <input type="hidden" name="enunciado" value="<%=Temas.tema%>">
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                    <label for="idCategoria">Selecione a Categoria</label>
                                </div>
    
                                <select name="idCategoria" id="idCategoria">
                                <% Categorias.forEach(function(categoria){ %>
                                    <option value="<%=categoria.id%>"><%=categoria.nomecategoria%></option>
                                    
                                    <%});%>
                                
                                </select>
                                </div>
    
                                <div class="row clearfix">
                                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                        <label for="nometema">Nome do Tema</label>
                                    </div>
                                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                        <div class="form-group">
                                            <div class="form-line">
                                                <input type="text" name="nometema" id="nometema" class="form-control"
                                                    placeholder="Digite o Tema" value="<%=Temas.nometema%>">
                                            </div>                                        
                                        </div>
                                    </div>
                                </div>
            
    
                            <div class="row clearfix">
                                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                    <button type="reset" class="btn btn-primary m-t-15 waves-effect">Limpar</button>
                                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Editar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Horizontal Layout -->
    </div>
</section>
<%- include('../rodape') -%>