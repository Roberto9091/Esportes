<%- include('../cabecalho') -%>
<section class="content">
    <div class="container-fluid">
        <!-- Horizontal Layout -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h4>
                            EDITAR QUESTÃO
                        </h4>
                    </div>
                    <div class="body">
                        <form class="form-horizontal" method="POST">
                            <% if(typeof msg !== "undefined"){ %>
                            <div class="alert bg-green alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                                <%=msg%>
                            </div>
                            <% } %>
                            <input type="hidden" name="tema" value="<%=Questoes.id%>">
                            <input type="hidden" name="enunciado" value="<%=Questoes.tema%>">

                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                    <label for="idQCategoria">Selecione a Categoria</label>
                                </div>
    
                                <select name="idQCategoria" id="idQCategoria">
                                    <% Categorias.forEach(function(categoria){ %>
                                        <option value="<%=categoria.id%>"><%=categoria.nomecategoria%></option>
                                        
                                        <%});%>
                                    
                                    </select>
    
                                    </div>
                            <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label for="idQTema">Selecione o Tema</label>
                            </div>
    
                            <select name="idQTema" id="idQTema">
                                <option>Selecione</option>
                                <% Temas.forEach(function(tema){ %>
                                    
                                    <optgroup label="<%=tema.categoria.nomecategoria%>">
                                        <option value="<%=tema.id%>"><%=tema.nometema%></option>
                                    </optgroup>
                                    
                                    <%});%>
                                
                                </select>
                            </div>
    
    
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                    <label for="enunciado">Enunciado da Questão</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="enunciado" id="enunciado" class="form-control"
                                                placeholder="Digite a Questão" value="<%=Questoes.enunciado%>">
                                        </div>                                        
                                    </div>
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                    <label for="opcao2">Opções de Respostas</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <input type="text" name="opcao1" id="opcao1" class="form-control"
                                                placeholder="Opção 1" value="<%=Questoes.opcao1%>">
                                        </div>
                                        <div class="form-line">
                                            <input type="text" name="opcao2" id="opcao2" class="form-control"
                                                placeholder="Opção 2" value="<%=Questoes.opcao2%>">
                                        </div>    
                                        <div class="form-line">
                                            <input type="text" name="opcao3" id="opcao3" class="form-control"
                                                placeholder="Opção 3" value="<%=Questoes.opcao3%>">
                                        </div>
                                        <div class="form-line">
                                            <input type="text" name="opcao4" id="opcao4" class="form-control"
                                                placeholder="Opção 4" value="<%=Questoes.opcao4%>">
                                        </div>
                                        
                                        <div class="form-line"></div>
                                        
                                    </div> 
                                </div>
                            </div>
                            <div class="row clearfix">
                                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                    <label for="tipo">Nível da Questão</label>
                                </div>
                                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <select class="form-control show-tick" name="nivel" value="<%=Questoes.opcao1%>">
                                                <option value="Nível 1">Nível 1</option>
                                                <option value="Nível 2">Nível 2</option>
                                                <option value="Nível 3">Nível 3</option>
                                                <option value="Nível 4">Nível 4</option>
                                                <option value="Nível 5">Nível 5</option>
                            
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
            
    
                            <div class="row clearfix">
                                <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                                    <button type="reset" class="btn btn-primary m-t-15 waves-effect">Limpar</button>
                                    <button type="submit" class="btn btn-primary m-t-15 waves-effect">Editar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Horizontal Layout -->
    </div>
</section>
<%- include('../rodape') -%>